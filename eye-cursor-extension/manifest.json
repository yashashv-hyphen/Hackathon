{
  "manifest_version": 3,
  "name": "Eye Cursor Extension",
  "version": "1.0",
  "description": "Control cursor with eye movement and blink to click on any website.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "camera"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inject.js",
        "gsap.min.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}